@model List<Customer>
@{
    ViewData["Title"] = "CustomerListWithDefaultIfEmpty";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Müşteri Listesi Bakiye Değerine Göre </h3>
                <p class="card-description">
                    <code>Müşteri işlemlerinizi buradan yapabilirsiniz</code>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı</th>
                                <th>Müşteri şehir</th>
                                <th>Bakiye</th>

                                <th>sil</th>
                                <th>güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.CustomerName @item.CustomerSurname</td>
                                    <td>@item.CustomerCity / @item.CustomerDistrict</td>
                                    <td>@item.CustomerBalance TL</td>

                                    <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Customer/CreateCustomer/" class="btn btn-outline-primary"> Yeni MÜŞTERİ Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

