@model List<Order>
@{
    ViewData["Title"] = "OrderListSearch";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Sipariş listesi 2</h3>
                
                <div class="table-responsive">
                    <h2> Duruma göre arama yapabilirsiniz</h2>
                    <form asp-action="OrderListSearch" method="get">
                        <input type="text" name="name" placeholder="örnek:taşıma durumunda..." class="form-control" />
                        <br />
                        <br />
                        <label> Filtre Tipi : </label>
                        <select name="filterType" class="form-control">
                            <option value="start" > Bu harflerle başlıyorsa</option>
                            <option value="end"> Bu harflerle bitiyorsa</option>
                        </select>
                        <button type="submit" class="btn btn-primary mt-2"> ARA </button>
                    </form>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş adet </th>
                                <th>birim fiyat</th>
                                <th>Toplam fiyat</th>
                                <th>Durum</th>

                                <th>sil</th>
                                <th>güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.OrderId</th>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>@item.Status</td>


                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-primary"> Yeni ürün Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

