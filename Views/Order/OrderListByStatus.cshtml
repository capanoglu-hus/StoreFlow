@model List<Order>
@{
    ViewData["Title"] = "OrderListByStatus";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Sipariş listesi </h3>
                <p class="card-description">
                    <code>Ürün işlemlerinizi buradan yapabilirsiniz</code>
                </p>
                <div class="table-responsive">
                    <form asp-action="OrderListByStatus" method="get">
                        <input type="text" name="status" placeholder="Bu alana durumu giriniz"  class="form-control"/>
                        <button type="submit" class="btn btn-primary mt-2"> ARA </button>
                    </form>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş adet </th>
                                <th>birim fiyat</th>
                                <th>Toplam fiyat</th>
                                <th>Durum</th>

                                <th>sil</th>
                                <th>güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.OrderId</th>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>@item.Status</td>
                                    

                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-primary"> Yeni ürün Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

