@model List<Order>
@{
    string status = "";
}
<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <i class="fas fa-table"></i>
                Son Siparişler
            </h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Müşteri</th>
                            <th>Ürün</th>
                            <th>adet</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td class="font-weight-bold">
                                    @item.Customer.CustomerName @item.Customer.CustomerSurname
                                </td>
                                <td class="text-muted">
                                    @item.Product.ProductName
                                </td>
                                <td>
                                    @item.OrderCount
                                </td>
                                @{
                                    var statusClasses = new Dictionary<string, string>
                                    {
                                        { "Taşıma Durumunda", "badge-warning" },
                                        { "Teslim edildi", "badge-success" },
                                        { "İptal Edildi", "badge-danger" },
                                        { "ödeme bekleniyor", "badge-primary" },
                                        { "Sipariş alındı", "badge-info" }
                                    };

                                    var badgeClass = statusClasses.ContainsKey(@item.Status)
                                        ? statusClasses[@item.Status]
                                        : "badge-dark";
                                }

                                <td>
                                    <label class="badge @badgeClass badge-pill">@item.Status</label>
                                </td>

                                
                            </tr>
                        }
                        
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="col-md-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <i class="fas fa-calendar-alt"></i>
                Takvim
            </h4>
            <div id="inline-datepicker-example" class="datepicker"></div>
        </div>
    </div>
</div>